<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nl.ou.s3app.ExpiryActivity">

    <CheckBox
        android:id="@+id/useExpiryCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gebruik datum/tijdstip einde geldigheid"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20dp"
        android:checked="false"/>

    <Button
        android:id="@+id/dateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kies datum"
        android:layout_marginBottom="28dp"
        android:layout_above="@+id/timeButton"
        android:layout_alignEnd="@+id/useExpiryCheckBox"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:editable="false"
        android:ems="10"
        android:id="@+id/timeText"
        android:layout_alignBottom="@+id/timeButton"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/timeButton"/>

    <Button
        android:id="@+id/timeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kies tijdstip"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/dateButton"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:editable="false"
        android:ems="10"
        android:id="@+id/dateText"
        android:layout_alignBottom="@+id/dateButton"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/dateButton"/>

    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accepteren"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
